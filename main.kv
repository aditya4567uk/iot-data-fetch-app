

MDScreen:
    MDBoxLayout:
        orientation:"vertical"
        MDBoxLayout:
            orientation:"vertical"
            adaptive_height:True
            MDBoxLayout:
                size_hint_y:None
                height:dp(65)
                AnchorLayout:
                    anchor_y:'top'
                    anchor_x:'left'
                    MDIconButton:
                        icon:"arrow-left"
                AnchorLayout:
                    anchor_y:'top'
                    anchor_x:'right'
                    MDBoxLayout:
                        adaptive_size:True
                        MDIconButton:
                            icon:"magnify"
            MDBoxLayout:
                size_hint_y:None
                height:dp(55)
                spacing:dp(12)
                padding:dp(12)
                TabCard:
                    icon:'charity'
                    text:"Bezubaan Monitor App"
                    md_bg_color:.9,.9,.9,1
        MDBoxLayout:
            ScrollView:
                MDGridLayout:
                    cols:2
                    padding:dp(20)
                    spacing:dp(40)
                    adaptive_height:True
                    ElementCard:
                        image:'images/oxygen.png'
                        labels:'Oxygen Level'
                        rate:"   100"
                    ElementCard:
                        image:'images/heartrate.png'
                        labels:'Heart Rate'
                        rate:"   100"
                    ElementCard:
                        image:'images/bp.png'
                        labels:'Blood Pressure'
                        rate:"   100"
                    ElementCard:
                        image:'images/temp.png'
                        labels:'Temperature'
                        rate:"   100"
        # bottom navigation appbar
        MDBoxLayout:
            size_hint_y:None
            md_bg_color:.9,.9,.9,1
            height:dp(60)
            padding:[0,0,0,15]
            MDBoxLayout:
                orientation:'vertical'
                MDIconButton:
                    pos_hint:{'center_x':.5,'center_y':.5}
                    icon:'home'
                    theme_text_color:'Custom'
                    text_color:app.theme_cls.primary_color
                MDLabel:
                    text:'Home'
                    valign:"center"
                    theme_text_color:'Custom'
                    text_color:app.theme_cls.primary_color
                    halign:"center"
            MDBoxLayout:
                orientation:'vertical'
                MDIconButton:
                    pos_hint:{'center_x':.5,'center_y':.5}
                    icon:'phone-alert'
                    on_press:app.dial()
                MDLabel:
                    text:'Emergency'
                    valign:"center"
                    halign:"center"
            MDBoxLayout:
                orientation:'vertical'
                MDIconButton:
                    pos_hint:{'center_x':.5,'center_y':.5}
                    icon:'hospital-building'
                MDLabel:
                    text:'Hospitals'
                    valign:"center"
                    halign:"center"
            MDBoxLayout:
                orientation:'vertical'
                MDIconButton:
                    pos_hint:{'center_x':.5,'center_y':.5}
                    icon:'account'
                MDLabel:
                    text:'Profile'
                    valign:"center"
                    halign:"center"

<ContentCustomSheet@MDBoxLayout>:
    orientation: "vertical"
    size_hint_y: None
    height:dp(750)
    image:''
    rate:""
    labels:""
    padding:dp(12)
    spacing:dp(6)
    RelativeLayout:
        ElementCard:
            pos_hint:{"x":.05,"y":.5}
            image:root.image
            rate:root.rate
            labels:root.labels

    
    MDLabel:
        text:"Normal value of this segment lies between x to y range , if something unusual is observed kindly choose below options as per need."
        adaptive_height:True
    

    MDBoxLayout:
        spacing:dp(8)
        MDRoundFlatIconButton:
            icon:"car-emergency"
            text:"Emergency call"
            size_hint_x:1
        MDRoundFlatIconButton:
            icon:"web"
            text:"Read More"
            on_press:app.oxygenbrowse()
            size_hint_x:1
            
<Check@MDCheckbox>:
    group: 'group'
    radio_icon_normal:"checkbox-blank-circle"
    size_hint: None, None
    size: dp(48), dp(48)

<ElementCard@MDCard>:
    image:''
    rate:''
    labels:""
    orientation:'vertical'
    on_release:app.show_custom_bottom_sheet(root.image,root.labels,root.rate)
    size_hint_x:.5
    elevation:15
    size_hint_y:None
    md_bg_color:app.theme_cls.primary_color
    height:dp(220)
    padding:dp(25)
    spacing:dp(15)
    radius:[25]
    MDBoxLayout:
        height:dp(120)
        size_hint_y:None
        Image:
            source:root.image

    MDBoxLayout:
        size_hint_y:None
        height:dp(25)
        MDIcon:
            icon:'star'
            theme_text_color:'Custom'
            text_color:1,1,0,1
            halign:"center"
            size_hint_x:.25
            # width:dp(30)
        MDLabel:
            text:root.rate

    MDLabel:
        text:root.labels
        font_style:'H6'


<TabCard@MDCard>:
    icon:""
    text:""
    size_hint_y:None
    radius:dp(15)
    height:dp(55)
    MDIconButton:
        icon:root.icon
    MDLabel:
        text:root.text

